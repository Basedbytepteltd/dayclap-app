import { serve } from 'https://deno.land/std@0.210.0/http/server.ts';

console.log('send-welcome-email-proxy function started');

Deno.serve(async (req) => {
  if (req.method === 'OPTIONS') {
    return new Response(null, {
      status: 204,
      headers: {
        'Access-Control-Allow-Origin': '*',
        'Access-Control-Allow-Headers': 'authorization, x-client-info, apikey, content-type',
        'Access-Control-Allow-Methods': 'POST',
      },
    });
  }

  try {
    const { email, user_name } = await req.json();

    if (!email) {
      console.error('Error: Email is required in the payload.');
      return new Response(JSON.stringify({ error: 'Email is required' }), {
        headers: { 'Content-Type': 'application/json' },
        status: 400,
      });
    }

    const backendUrl = Deno.env.get('VITE_BACKEND_URL');
    const backendApiKey = Deno.env.get('BACKEND_API_KEY');

    if (!backendUrl) {
      console.error('Configuration Error: VITE_BACKEND_URL is not set in Supabase secrets.');
      return new Response(JSON.stringify({ error: 'Backend URL not configured' }), {
        headers: { 'Content-Type': 'application/json' },
        status: 500,
      });
    }
    if (!backendApiKey) {
      console.error('Configuration Error: BACKEND_API_KEY is not set in Supabase secrets.');
      return new Response(JSON.stringify({ error: 'Backend API key not configured' }), {
        headers: { 'Content-Type': 'application/json' },
        status: 500,
      });
    }

    const flaskEndpoint = `${backendUrl}/api/send-welcome-email`;
    console.log(`Proxying welcome email request to Flask backend: ${flaskEndpoint}`);

    const res = await fetch(flaskEndpoint, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-API-Key': backendApiKey, // Use the custom API key for backend authentication
      },
      body: JSON.stringify({
        email,
        user_name,
      }),
    });

    const data = await res.json();

    if (res.ok) {
      console.log(`Welcome email proxy successful for ${email}:`, data);
      return new Response(JSON.stringify({ message: 'Welcome email request proxied successfully', backend_response: data }), {
        headers: { 'Content-Type': 'application/json' },
        status: 200,
      });
    } else {
      console.error(`Failed to proxy welcome email for ${email} (Status: ${res.status}):`, data);
      return new Response(JSON.stringify({ error: data.message || 'Failed to proxy welcome email request to backend', backend_response: data }), {
        headers: { 'Content-Type': 'application/json' },
        status: res.status,
      });
    }
  } catch (error) {
    console.error('Unhandled Error in send-welcome-email-proxy:', error.message);
    return new Response(JSON.stringify({ error: 'Internal server error during proxying' }), {
      headers: { 'Content-Type': 'application/json' },
      status: 500,
    });
  }
});
