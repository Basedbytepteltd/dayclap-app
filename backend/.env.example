FLASK_SECRET_KEY="YOUR_VERY_LONG_AND_RANDOM_FLASK_SECRET_KEY_HERE"
DAILY_EMAIL_API_KEY="YOUR_STRONG_UNIQUE_DAILY_EMAIL_API_KEY_HERE"

# Maileroo Configuration
MAILEROO_API_KEY="YOUR_ACTUAL_MAILEROO_SENDING_KEY_FROM_MAILEROO_DASHBOARD"
MAILEROO_API_ENDPOINT="https://api.maileroo.com/api/v2" # CORRECTED
MAIL_DEFAULT_SENDER="no-reply@team.dayclap.com" # Must be a verified sender in Maileroo

# Supabase Configuration (used by backend)
SUPABASE_URL="YOUR_SUPABASE_PROJECT_URL"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"

# Frontend URL (used by backend for email links)
VITE_FRONTEND_URL="YOUR_DEPLOYED_FRONTEND_URL"

# API Key for Supabase Trigger to call backend
BACKEND_API_KEY="YOUR_STRONG_UNIQUE_KEY_FOR_SUPABASE_TRIGGER_CALLS"

# VAPID Keys for Web Push Notifications (Backend uses these to send push messages)
# IMPORTANT: The VAPID_PUBLIC_KEY here MUST match VITE_VAPID_PUBLIC_KEY in your frontend's .env
VAPID_PUBLIC_KEY="YOUR_VAPID_PUBLIC_KEY_FOR_BACKEND"
VAPID_PRIVATE_KEY="YOUR_VAPID_PRIVATE_KEY_FOR_BACKEND"

# Invitation cooldown (seconds) for /api/send-invitation rate limiting
INVITE_COOLDOWN_SECONDS=300

# Comma-separated list of admin emails allowed to access /api/admin/* (lowercased)
ADMIN_EMAILS="admin@example.com"

# --------- CORS Settings ----------
# Exact origins allowed (comma-separated, no spaces unless inside origin)
# Include your production domains and localhost for dev
CORS_ALLOW_ORIGINS="https://dayclap.com,https://www.dayclap.com,https://dayclap-app.vercel.app,http://localhost:5173"

# Optional: Regex patterns (comma-separated) to allow dynamic domains (e.g., Vercel previews)
# Default allows any *.vercel.app if not set
CORS_ALLOW_ORIGIN_REGEX="https://.*\\.vercel\\.app"

# Whether to send Access-Control-Allow-Credentials: true
# Keep false unless you specifically need cookies/auth headers across origins
CORS_ALLOW_CREDENTIALS=false
